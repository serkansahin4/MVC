@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApplication3.Models.ViewModel

<!-- /.container-fluid -->
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-download fa-sm text-white-50"></i> Generate Report
    </a>
</div>

<!-- Content Row -->
<div class="row">

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Bugün Alınan Siparişler
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AlinanSiparis</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Günün Geliri
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GununGelir</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Toplam Ürün Adet
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ToplamUrunAdet</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Requests Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Kargo Sayısı
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.KargoSayisi</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Customer</th>
                <th>Employe</th>
                <th>Order Date</th>
                <th>Shipped Date</th>
                <th>Freight</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (WebApplication3.Models.Order item in Model.Orders)
            {
                <tr>
                    <td>@item.OrderID</td>
                    <td>@item.Customer.CompanyName</td>
                    <td>@item.Employee.FirstName</td>
                    <td>@item.OrderDate</td>
                    <td>@item.ShippedDate</td>
                    <td>@item.Freight</td>
                    <td>@item.ShipAddress</td>
                    <td>
                        <a href="/Home/OrderDetail/@item.OrderID" class="btn btn-primary btn-sm">Detail</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>